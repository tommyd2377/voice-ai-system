# Twilio credentials (never commit real values)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# OpenAI realtime API key
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# OpenAI realtime WebSocket endpoint
OPENAI_REALTIME_ENDPOINT=wss://api.openai.com/v1/realtime?model=gpt-realtime

# Primary Twilio phone number used for voice calls (optional fallback for SMS from)
PHONE_RELAY_NUMBER=+15555551234

# WebSocket endpoint for Twilio <Stream>
# Can be set as either:
# - wss://your-app-domain/realtime
# - your-app-domain/realtime
TWILIO_STREAM_URL=wss://your-app-domain/realtime

# Owner message routing for captured caller messages and self-notes
TWILIO_OWNER_PHONE=+15555559876
TWILIO_SMS_FROM=+15555551234

# Local port fallback (ignored in cloud hosting)
PORT=8080

# Firebase is currently dormant for the voice assistant flow.
# Keep this commented/optional unless you intentionally re-enable Firebase later.
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account", ...}
